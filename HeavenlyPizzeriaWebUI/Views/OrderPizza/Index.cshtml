@model HeavenlyPizzeriaWebUI.Models.PizzaOrder

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var order = Model;
}

<div class="jumbotron" style="background-image:url('http://fullhdpictures.com/wp-content/uploads/2015/10/Best-of-Heaven-Wallpaper.jpg');background-repeat:no-repeat;">

    <h1>Welcome to Heavenly Pizzeria </h1>
    <p class="lead">Pizza ambrosia to die for served piping hot!</p>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4> Your Pizza Order: @Html.DisplayFor(model => model.Pizza.Name) &nbsp; $@Html.DisplayFor(model => model.Pizza.Price)</h4>

        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
